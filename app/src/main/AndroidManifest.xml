<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.getmo">

    <uses-permission
        android:name="android.permission.READ_PHONE_STATE"/>

    <uses-permission
        android:name="android.permission.VIBRATE"/>

    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- copy & adjust & adjust -->
    <permission
        android:name="br.com.getmo.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission
        android:name="br.com.getmo.permission.C2D_MESSAGE" />
    <!-- copy & adjust & adjust -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- copy & adjust & adjust -->
        <meta-data
            android:name="br.com.smartpush.APPID"
            android:value="@string/smartpush_appid" />

        <meta-data
            android:name="br.com.smartpush.APIKEY"
            android:value="@string/smartpush_apikey"/>

        <meta-data
            android:name="br.com.smartpush.PROXY"
            android:value="https://api.getmo.com.br/"/>

        <!--<meta-data -->
            <!--android:name="br.com.smartpush.LOCATIONUPDT" -->
            <!--android:value="IMMEDIATELY"/>-->
        <!---->
        <!--<meta-data -->
            <!--android:name="br.com.smartpush.DEBUG" -->
            <!--android:value="true"/>-->

        <!-- Set custom default icons. This is used when no icon is set for incoming notification messages. -->
        <meta-data
            android:name="br.com.smartpush.default_notification_small_icon"
            android:resource="@drawable/ic_sp_notif_buscape" />

        <meta-data
            android:name="br.com.smartpush.default_notification_big_icon"
            android:resource="@drawable/ic_sp_buscape" />

        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. -->
        <meta-data
            android:name="br.com.smartpush.default_notification_color"
            android:resource="@color/colorAccent" />
        <!-- copy & adjust & adjust -->

        <!-- start : copy & paste area -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="br.com.getmo" />
            </intent-filter>
        </receiver>

        <service
            android:name="br.com.smartpush.SmartpushIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>

        <service
            android:name="br.com.smartpush.SmartpushService"
            android:exported="true"/>

        <activity
            android:name="br.com.smartpush.SmartpushActivity"
            android:hardwareAccelerated="true"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- end : copy & paste area -->

        <!-- start : custom config area -->
        <service
            android:name=".MySmartpushListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- end : custom config area -->

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "getmo://home” -->
                <data
                    android:scheme="getmo"
                    android:host="home" />
                <!-- note that the leading "/" is required for pathPrefix-->
            </intent-filter>
        </activity>

    </application>

</manifest>
