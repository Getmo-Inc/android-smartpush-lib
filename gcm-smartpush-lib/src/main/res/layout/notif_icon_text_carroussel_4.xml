<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/background_notification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/thumb_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_getmo"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="16sp"
                android:ellipsize="end"
                android:textColor="#000"
                android:text="Buscapé"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="14sp"
                android:ellipsize="end"
                android:text="Escolhemos algumas ofertas para você! Dá um busca!"
                android:textColor="#666"/>

        </LinearLayout>
    </LinearLayout>

    <!--LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <!--ImageButton
        android:id="@+id/btnPrevious"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_navigation_control_rect"
        android:src="@drawable/ic_arrow_left" /-->

    <!--
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
    -->

        <ViewFlipper
            android:id="@+id/carroussel_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:measureAllChildren="true"
            android:flipInterval="500"
            android:inAnimation="@anim/slide_in_right"
            android:outAnimation="@anim/slide_out_left"
            android:animateFirstView="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/frame_1_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/frame_2_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/frame_3_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/frame_4_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

        </ViewFlipper>

        <ViewFlipper
            android:id="@+id/carroussel_previous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:measureAllChildren="true"
            android:flipInterval="500"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:animateFirstView="true"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/frame_1_previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/frame_2_previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/frame_3_previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/frame_4_previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

        </ViewFlipper>

        <!--ImageButton
            android:id="@+id/btnNext"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_navigation_control_rect"
            android:src="@drawable/ic_arrow_right" /-->

        <ImageButton
            android:id="@+id/btnPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_navigation_control_rect"
            app:srcCompat="@drawable/ic_chevron_left_white_36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_navigation_control_rect"
            app:srcCompat="@drawable/ic_chevron_right_white_36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>
    <!--/LinearLayout-->

</LinearLayout>