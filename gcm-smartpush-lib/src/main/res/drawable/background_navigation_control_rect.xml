<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        android:drawable="@drawable/background_navigation_control_rect_pressed">
        <shape android:shape="rectangle" >
            <solid android:color="@color/red_over" />
            <size
                android:width="20dp"
                android:height="50dp"/>
        </shape>
    </item>

    <item
        android:drawable="@drawable/background_navigation_control_rect_default">
        <shape android:shape="rectangle" >
            <solid android:color="@color/red" />
            <size
                android:width="20dp"
                android:height="50dp"/>
        </shape>
    </item>
</selector>